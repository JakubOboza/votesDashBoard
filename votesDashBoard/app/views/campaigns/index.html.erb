<h2>Campaigns</h2>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Currently Running Campaigns
      <span class="badge"><%= @campaigns.count %></span>
    </h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <% @campaigns.each do |campaign| %>
      <div class="col-xs-6 col-md-2">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><%= campaign %></h3>
          </div>
          <div class="panel-body">
            <%= link_to 'View', campaign_path(campaign)  %>
          </div>
        </div> <!-- end of campaign panel  -->
      </div>
      <% end %>
    </div>
  </div> <!-- end of outer panel  -->
</div>
